game.Body (
	position.x > 200, position.x < 600, position.y > 0, position.y < 400
)

game.Force (
	world.tick = {
		body.position: + vector
	}
)

let player = new game.Body {
	world: w
}

game.Player_Input_Force (
	vector = world.input.dir * 4

	world.tick = {
		if attack_cooldown > 1 { attack_cooldown: - 1 }

		if attack_cooldown = 0 && attacking = true {
			attack_cooldown: 10
			new Body {
				position: player.position
				forces: + new Force {
					vector: input.attack_dir
				}
			}
		}
	}
)

let w = new game.World {
	input: new game.Player_Input
}

new game.Player_Input_Force {
	body: player
	world: w
}